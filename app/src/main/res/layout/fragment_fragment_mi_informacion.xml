<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.aplicacioncine.FragmentMiInformacion">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Edad"
            android:inputType="textPersonName"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor" />

        <EditText
            android:id="@+id/etProfesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Profesion"
            android:inputType="textPersonName"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor" />

        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:hint="Genero"
            android:textAllCaps="false"
            android:textColor="@color/fontColor"
            android:textSize="19sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Masculino"
                android:textColor="@color/fontColor" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Femenino"
                android:textColor="@color/fontColor" />

        </RadioGroup>

        <EditText
            android:id="@+id/etGeneroPelicula1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Genero de Peliculas Favorito"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor"/>

        <EditText
            android:id="@+id/etGeneroPelicula2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Segundo Genero de Peliculas Favorito"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="guardar"
            android:text="Guardar" />

    </LinearLayout>
</FrameLayout>
